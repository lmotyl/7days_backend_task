{% extends 'base.html.twig' %}

{% block title %}Hello DateController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>


<div class="example-wrapper">
    <div>
        {% if submitted %}
            The time zone {{ timezone }} has {{ minsToUtc }} minutes offset to UTC on the given day at noon.<br/>
            February in this year is {{ februaryInYear }} days long.<br />
            The specified month {{ givenMonthName }} is {{ daysInGivenMonth }} days long.

        {% endif %}

    </div>

    {{ form(form) }}

</div>
{% endblock %}
